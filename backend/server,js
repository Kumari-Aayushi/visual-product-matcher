const express = require("express");
const cors = require("cors");

const app = express();

app.use(cors());
app.use(express.json());

// Sample products API
app.get("/api/products", (req, res) => {
  res.json([
    {
      id: 1,
      name: "Sample Product",
      category: "Clothing",
      image: "https://via.placeholder.com/200"
    }
  ]);
});

const PORT = 5000;

app.listen(PORT, () => {
  console.log(`Server running on port ${PORT}`);
});
